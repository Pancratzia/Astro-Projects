---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle } = Astro.props;
---

<article
  class=`${Astro.props.class}
  col-span-5
relative rounded-xl
backdrop-blur-md
border border-black/10
shadow-inner shadow-white/10`
>
  <!-- TODO: AÃ±adir un fade in negro para que se vea el contenido -->

  <slot name="image" />
  <div class="uselect-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full">
    <h2 class="text-3xl font-bold text-balance text-white mb-4">{title}</h2>
    {subtitle && <h3 class="text-3xl font-semibold text-sky-200/80 -mt-4 mb-4">{subtitle}</h3>}

    <slot name="content" />
  </div>
</article>
